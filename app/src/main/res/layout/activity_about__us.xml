<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vimal.anytimecook.com.aocc.vimal.anytimecook.ABOUT_US">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/application_name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textStyle="italic"
                android:textSize="17sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow us on"
                android:textStyle="bold"
                android:layout_marginTop="50sp"
                android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp">

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="48sp"
            android:src="@mipmap/facebook_logo" />
        <ImageButton
            android:id="@+id/gmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/gmail"
            android:layout_marginLeft="30sp"/>
        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/twitter"
            android:layout_marginLeft="30sp"/>
        <ImageButton
            android:id="@+id/instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/instagram"
            android:layout_marginLeft="30sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/footer_AOCC"
        android:textAlignment="center"
        android:layout_marginTop="200sp"/>

</LinearLayout>