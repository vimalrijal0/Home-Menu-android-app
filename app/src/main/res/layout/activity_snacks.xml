<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vimal.anytimecook.com.aocc.vimal.anytimecook.snacks">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cheese_pakoda"
                android:layout_width="match_parent"
                android:layout_height="307dp"
                app:srcCompat="@mipmap/cheese_pakoda"
                android:onClick="get_snacks"/>

            <ImageButton
                android:id="@+id/macroni"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                app:srcCompat="@mipmap/macroni"
                android:onClick="get_snacks"/>

            <ImageButton
                android:id="@+id/maggi"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                app:srcCompat="@mipmap/maggi"
                android:onClick="get_snacks"/>

            <ImageButton
                android:id="@+id/bread_pakoda"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                app:srcCompat="@mipmap/bread_pakoda"
                android:onClick="get_snacks"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>