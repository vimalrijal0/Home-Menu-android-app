<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vimal.anytimecook.com.aocc.vimal.anytimecook.rice">




   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/imageView"
               android:layout_width="match_parent"
               android:layout_height="240dp"
               app:srcCompat="@mipmap/rice" />


           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Ingredients "
               android:textAlignment="center"
               android:textSize="30sp"
               android:textStyle="bold"/>

           <TextView
               android:id="@+id/textView6"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/rice_need"
               android:textSize="17sp"
               android:textStyle="bold"
               android:layout_marginLeft="110sp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Follow These Steps"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textSize="30sp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="@string/rice_follow"
               android:textStyle="bold"
               android:layout_marginTop="15sp"
               android:textAlignment="center"/>

           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="watch  recipe  video"
               android:background="@color/leaf_green"/>

       </LinearLayout>
   </ScrollView>
</LinearLayout>